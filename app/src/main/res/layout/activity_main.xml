<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.alonedroid.smartmemo.MainActivity"
        >

        <LinearLayout
            android:id="@+id/main_left_menu"
            android:layout_width="@dimen/dimen_space_48dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/sp_shoubu"
            android:orientation="vertical"
            />

        <LinearLayout
            android:id="@+id/main_right_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/main_left_menu"
            android:background="@color/sp_shoubu_pare"
            android:orientation="vertical"
            />

        <View
            android:id="@+id/main_left_menu_shadow"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/main_left_menu"
            android:background="@drawable/background_shadow"
            />
    </RelativeLayout>
</layout>