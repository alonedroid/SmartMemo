<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sp_shoubu_13"
        android:padding="@dimen/dimen_space_16dp"
        >

        <TextView
            android:id="@+id/label_count_down_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/dimen_space_8dp"
            android:text="@string/timer_count_down_label"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/timer_count_down"
            android:layout_width="@dimen/dimen_space_48dp"
            android:layout_height="@dimen/dimen_space_48dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/label_count_down_timer"
            android:background="@drawable/shape_rounded_corners_shoubu_2dp"
            android:src="@mipmap/ic_play_arrow_black_24dp"
            />

        <TextView
            android:id="@+id/timer_count_down_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_space_48dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/label_count_down_timer"
            android:layout_toLeftOf="@id/timer_count_down"
            android:gravity="center"
            android:textSize="20dp"
            />

        <View
            android:id="@+id/divide_board"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/timer_count_down"
            android:background="@color/thin_black"
            />

        <LinearLayout
            android:id="@+id/count_down_board"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_space_48dp"
            android:layout_below="@id/divide_board"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/timer_add_10m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_background_shoubu"
                android:gravity="center"
                android:text="+ 10m"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/thin_black"
                />

            <TextView
                android:id="@+id/timer_add_1m"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_background_shoubu"
                android:gravity="center"
                android:text="+ 1m"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/thin_black"
                />

            <TextView
                android:id="@+id/timer_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_background_shoubu"
                android:gravity="center"
                android:text="C"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/thin_black"
                />

            <TextView
                android:id="@+id/timer_add_10s"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_background_shoubu"
                android:gravity="center"
                android:text="+ 10s"
                />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/thin_black"
                />

            <TextView
                android:id="@+id/timer_add_1s"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/custom_background_shoubu"
                android:gravity="center"
                android:text="+ 1s"
                />
        </LinearLayout>

        <View
            android:id="@+id/divide"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/count_down_board"
            android:layout_margin="@dimen/dimen_space_24dp"
            android:background="@color/thin_black"
            />

        <TextView
            android:id="@+id/label_count_up_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divide"
            android:layout_marginBottom="@dimen/dimen_space_8dp"
            android:text="@string/timer_count_up_label"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/timer_count_up"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_space_48dp"
            android:layout_below="@id/label_count_up_timer"
            android:background="@drawable/shape_rounded_corners_shoubu_2dp"
            android:gravity="center"
            android:text="@string/timer_count_up_btn"
            />

        <View
            android:id="@+id/divide_message"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/timer_count_up"
            android:layout_margin="@dimen/dimen_space_24dp"
            android:background="@color/thin_black"
            />

        <TextView
            android:id="@+id/how_to_remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divide_message"
            android:layout_marginBottom="@dimen/dimen_space_8dp"
            android:text="@string/timer_how_to_remove"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/how_to_remove"
            android:text="@string/timer_how_to_remove_message"
            />

    </RelativeLayout>
</layout>