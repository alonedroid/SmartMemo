<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <merge>

        <ImageView
            android:id="@+id/memo_input_done"
            android:layout_width="@dimen/dimen_space_48dp"
            android:layout_height="@dimen/dimen_space_48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/shape_rounded_corners_primary_2dp"
            android:src="@mipmap/ic_done_black_24dp"
            />

        <EditText
            android:id="@+id/memo_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/memo_input_done"
            android:hint="メモを入力"
            />
    </merge>
</layout>