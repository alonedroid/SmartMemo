<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.alonedroid.smartmemo"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".SmApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- サブActivity -->
        <activity
            android:name=".feature.memo.input.SmMemoInputActivity"
            android:theme="@style/TranslucentTheme"
            />

        <!-- サービス群 -->
        <service android:name=".service.SmCountUpTimerService"/>
        <service android:name=".service.SmCountDownTimerService"/>

        <!-- レシーバ群 -->
        <receiver android:name=".receiver.SmReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>
    </application>
</manifest>